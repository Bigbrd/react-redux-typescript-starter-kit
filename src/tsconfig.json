{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": false
  },
  "filesGlob": [
    "../typings/main.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "files": [
    "../typings/main.d.ts",
    "app.tsx",
    "components/my-component.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
